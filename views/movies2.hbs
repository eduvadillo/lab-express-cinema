<div class="generalMoviesDetails">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          class="imageId"
          src="{{image}}"
          class="img-fluid rounded-start"
          alt="..."
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <a class="btn btn-primary" href="/movies" role="button">Go back!</a>
          <h5 class="card-title titleId">{{title}}</h5>
          <h4 class="card-title directorId">{{director}}</h4>
          <h4 class="card-title starsId">Stars</h4>

          <h5 class="card-title starsNameId"><ul>
              {{#each stars}}
                <div>{{this}}</div>
              {{/each}}
            </ul></h5>
          <p class="card-text">{{description}}</p>
          <div class="showtimesId">
            <p class="card-text">{{#each showtimes}}
                <div>{{this}} | </div>
              {{/each}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>